@model List<Cinema.Domain.DomainModels.Ticket>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Tickets</h1>
<div>
	<form asp-action="FilterTickets">
		<input type="date" id="start" name="start" />
		<input type="date" id="end" name="end" />
		<button type="submit" class="btn btn-sm btn-secondary">Filter</button>
	</form>
</div>

@for (int i = 0; i < Model.Count; i++)
{
	var item = Model[i];
	if (i % 3 == 0)
	{
		@:<div class="row">
		}
		<div class="col-md-3 m-4">
			<div class="card" style="width: 18rem; height: 30rem;">
				<img class="card-img-top" src="@item.TicketImage" style="height: 30%" alt="Image description" />
				<div class="card-body">
					<h3 class="card-title">@item.TicketName - @item.TicketGenre</h3>
					<p class="card-text">Date: @item.TicketDate</p>
					<h6>Price: @item.TicketPrice MKD</h6>
				</div>
				<div class="card-footer">

					<a asp-controller="Tickets" asp-action="AddTicketToCard" asp-route-id="@item.Id" class="btn btn-info">Add to card</a>
					<a asp-controller="Tickets" asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
					<a asp-controller="Tickets" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
				</div>
			</div>
		</div>
		if (i % 3 == 2)
		{
		@:</div>
	}

}

<div class="container">
	<div class="m-3">
		<a asp-controller="Tickets" asp-action="Create" class="btn btn-success">Create new Ticket</a>
	</div>
</div>
