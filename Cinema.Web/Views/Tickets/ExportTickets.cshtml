@model Cinema.Domain.DTO.TicketDTO
@{ ViewData["Title"] = "Export Tickets";
	Layout = "~/Views/Shared/AdminMenu.cshtml"; }
<div class="container">
	<h3>Export Tickets By Genre:</h3>
	<form asp-action="ExportInExcel" method="post">
		@for (int i = 0; i < Model.Genres.Count; i++)
		{
			<label asp-for="@Model.Genres[i]">@Model.Genres[i]</label>
			<input asp-for="@Model.Genres[i]" hidden />
			<input asp-for="@Model.areChecked[i]" />
			<br />
		}
			<input type="submit" value="Export" class="btn btn-success" />
	</form>
</div>