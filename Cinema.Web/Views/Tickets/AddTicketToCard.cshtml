@model Cinema.Domain.DTO.AddToShoppingCartDTO
@{
	ViewData["Title"] = "Add to Shopping Cart";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add selected Ticket to User Shopping Cart</h1>
<hr />
<div class="row">
	<div class="col-md-4 m-auto">
		<form asp-action="AddTicketToCard" method="post">
			<input type="hidden" asp-for="TicketId" />
			<div class="form-group">
				<label asp-for="SelectedTicket.TicketName"></label>
				<input disabled asp-for="SelectedTicket.TicketName" class="form-control" />

			</div>
			<div class="form-group">
				<label asp-for="TicketQuantity"></label>
				<input asp-for="TicketQuantity" class="form-control" />

			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />

			</div>
		</form>
	</div>
</div>